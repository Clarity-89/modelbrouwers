{% extends "formulation/default.form" %}
{% load formulation i18n %}


{% block __help %}
{% if help_text %}
<span class="help glyphicon glyphicon-question-sign" data-trigger="hover focus click" data-toggle="popover" data-content="{{ help_text }}"></span>
{% endif %}
{% endblock %}


{% block _help %}
{% if help_text %}
<span class="input-group-addon">
    {% use '__help' %}
</span>
{% endif %}
{% endblock _help %}


{% block non_field_errors %}{% if form.non_field_errors %}
<div class="panel panel-danger">
    <div class="panel-heading">{% trans "The form contains errors" %}</div>

    <ul class="list-group">
        {% for error in form.non_field_errors %}<li class="list-group-item error">{{ error }}</li>{% endfor %}
    </ul>
</div>
{% endif %}{% endblock %}
