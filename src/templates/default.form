{% extends "formulation/default.form" %}
{% load formulation %}


{% block __help %}
{% if help_text %}
<span class="help glyphicon glyphicon-question-sign" data-trigger="hover focus click" data-toggle="popover" data-content="{{ help_text }}"></span>
{% endif %}
{% endblock %}


{% block _help %}
{% if help_text %}
<span class="input-group-addon">
    {% use '__help' %}
</span>
{% endif %}
{% endblock _help %}


{% block non_field_errors %}{% if form.non_field_errors %}
<div class="text-center">
<ul class="text-danger">
    {% for error in form.non_field_errors %}<li class="error">{{ error }}</li>{% endfor %}
</ul>
</div>
{% endif %}{% endblock %}
