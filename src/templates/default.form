{% load i18n sniplates forum_tools %}


{% block _label %}
{% if label %}
    <label id="label_{{ id_for_label }}" for="{{ id }}" class="control-label {{ label_grid|default:'col-sm-2' }} {{ required|yesno:"required," }}">
        {{ label }}
    </label>
{% endif %}
{% endblock %}

{% block _input %}
{% with input_type=input_type|default:form_field.field.widget.input_type|default:'text' %}
<input type="{{ input_type }}"
    name="{{ html_name }}"
    id="{{ id }}"
    value="{{ value|default:"" }}"
    class="form-control {{ css_classes }} {{ errors|yesno:"error," }} {{ extra_css_classes }}"
    {{ widget.attrs|flatattrs }}
    {{ required|yesno:"required," }}
    {{ autofocus|yesno:"autofocus," }}
    {% if placeholder %}placeholder="{{ placeholder }}"{% endif %}
>
{% endwith %}
{% endblock %}


{% block input %}
<div class="form-group clearfix">
    {% reuse "_label" %}
    <div class="{{ field_grid|default:'col-sm-10' }}">
        {% if help_text %}<div class="input-group">{% endif %}
        {% reuse "_input" %}
        {% reuse "_help" %}
        {% if help_text %}</div>{% endif %}
        {% reuse "_errors" %}
    </div>
</div>
{% endblock %}


{% block TextInput %}{% reuse "input" %}{% endblock %}
{% block EmailInput %}{% reuse "input" input_type="email" %}{% endblock %}
{% block NumberInput %}{% reuse "input" input_type="number" %}{% endblock %}
{% block URLInput %}{% reuse "input" input_type="url" %}{% endblock %}
{% block PasswordInput %}{% reuse "input" input_type="password" value="" %}{% endblock %}
{% block FileInput %}{% reuse "input" input_type="file" value="" %}{% endblock %}
{% block DateTimeInput %}{% reuse "input" input_type="datetime" value=value|date:'Y-m-d H:i:s' %}{% endblock %}
{% block TimeInput %}{% reuse "input" input_type="time" value=value|date:'H:i:s' %}{% endblock %}

